{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "ART",
    "patterns": [
        { "include": "#keywords" },
        { "include": "#operators" },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#comments" },
        { "include": "#directives" },
		{ "include": "#builtins" },
		{ "include": "#variables" },
		{ "include": "#userfunctions" }
    ],
    "repository": {
        "keywords": {
            "patterns": [{
                "name": "keyword.control.art",
                "match": "\\b(if|while|for|return)\\b"
            }]
        },
        "operators": {
            "patterns": [{
                "name": "keyword.operator.art",
                "match": "::=|>>|>|---"
            }]
        },
        "strings": {
            "patterns": [{
                "name": "string.quoted.double.art",
                "begin": "\"",
                "end": "\"",
                "patterns": [{
                    "name": "constant.character.escape.art",
                    "match": "\\\\."
                }]
            }]
        },
        "numbers": {
            "patterns": [{
                "name": "constant.numeric.art",
                "match": "\\b\\d+(\\.\\d+)?\\b"
            }]
        },
        "comments": {
			"patterns": [
				{
					"name": "comment.line.art",
					"match": "//.*$"
				},
				{
					"name": "comment.block.art",
					"begin": "\\(\\*",
					"end": "\\*\\)",
					"patterns": [
						{
							"name": "comment.block.nested.art",
							"begin": "\\(\\*",
							"end": "\\*\\)",
							"captures": {
								"0": { "name": "comment.block.nested.art" }
							}
						}
					]
				}
			]
		},		
        "directives": {
            "patterns": [{
                "name": "keyword.directive.art",
                "match": "!\\w+"
            }]
        },
		"builtins": {
			"patterns": [
				{
					"name": "support.function.builtin.art",
					"match": "\\b__\\w+\\b"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.art",
					"match": "\\b_\\w+\\b"
				}
			]
		},
		"userfunctions": {
			"patterns": [
				{
					"name": "entity.name.function.art",
					"match": "\\b[a-zA-Z_]\\w*\\s*(?=\\()"
				}
			]
		}
				
    },
    "scopeName": "source.art"
}
